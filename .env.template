# Minimum free space (%) required on DEST_DIR before switching to CAR_SSID
THRESHOLD=60

# Camera Wi-Fi network (primary)
CAMERA_SSID=your_camera_ssid
CAMERA_PSK=your_camera_psk

# Car Wi-Fi network (secondary)
CAR_SSID=your_car_ssid
CAR_PSK=your_car_psk

# Base Wi-Fi network (fallback)
BASE_SSID=your_base_ssid
BASE_PSK=your_base_psk

# WPA supplicant and interface settings
WPA_CONF=/etc/wpa_supplicant/wpa_supplicant.conf
WPA_BACKUP_DIR=/etc/wpa_supplicant/backups
COUNTRY=US

# Directories (override if needed)
TEMP_DIR=./downloads
DEST_DIR=/mnt/dashcam/videos

# Logging
LOG_FILE=./logs/viofo_copy.log

# Index files
INDEX_FILE=./downloads/processed_files.txt
INDEX_LOCK=./downloads/processed_files.txt.lock

# Network interface (set to your Wi-Fi interface)
IFACE=wlan0

# SMB share info (optional, if mounting from inside container)
#SMB_SERVER=//192.168.1.100/dashcam
#SMB_USER=your_smb_user
#SMB_PASS=your_smb_password
#SMB_MOUNTPOINT=/mnt/dashcam/videos